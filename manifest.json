{
  "manifest_version": 2,

  "name": "Neophobe",
  "description": "This extension warns you before you type a password into a website that you've never visited before.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Neophobe"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "permissions": [
    "tabs",
    "notifications",
    "storage",
    "http://*/",
    "https://*/"
  ]
}
